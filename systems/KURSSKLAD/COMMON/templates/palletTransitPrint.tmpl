<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=windows-1251">
    <style type="text/css">
        td,th{
            border: 1px solid black;
        }
        table{
            border-spacing: 0;
            border-collapse: collapse;
            width: 100%;
        }
    </style>

    <title>Печать</title>
</head>
<body>
    <table>
        <thead>
            <tr>
                <th>Паллет</th>
                <th>МП</th>
                <th>Клиент</th>
                <th>Дата</th>
                <th>Код</th>
                <th>Наименование</th>
                <th>Кол-во</th>
                <th>ВЗ</th>
            </tr>
        </thead>
        <tbody>
        #for $item in $datalist
            <tr>
                <th>$item.PNUM</th>
                <th>$item.PSNAME</th>
                <th>$item.PCLNAME</th>
                <th>#filter DateFilter2$item.PCLDATE#end filter#</th>
                <th>$item.WCODE</th>
                <th>$item.WNAME</th>
                <th>#filter Quantity$item.AMOUNT#end filter#</th>
                <th>$item.INEXPENSES</th>
            </tr>
        #end for
        </tbody>
    </table>
</body>
