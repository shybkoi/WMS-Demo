#encoding cp1251

<html>
<head>
    <title>$_('Карта доступа')</title>
    <style type="text/css">
        #caption {
            font-family: arial;
            font-size: 12pt;
            color: #000;
            margin: 0 auto 10px;
            width: 10cm;
            text-align: center;
            font-weight: bold;
        }
        #description {
            font-family: serif;
            font-size: 12pt;
            color: #000;
            margin: 0 auto 20px;
            width: 16cm;
            text-align: justify;
        }
        #printBC {
            color: #000;
            background-color: #fff;
            border:2px dashed black;
            margin: 0 auto;
            width: 9cm;
            height: 5.5cm;
        }
        #group_bc {
            width: 9cm;
            margin: 10px auto 0px;
        }
        #bc {
          color:0;
          /*font-size: 200%; 25px*/
          font-weight:normal;
          margin: 0 auto;
        }
        #dolj {
              color:#7F7F7F;
              text-align: center;
              font-size:25px;
              font-weight:bold;
              margin-top: 0.3cm;
        }
        #f {
            font-family: Impact;
            font-size: 20pt;
            line-height: 24pt;
            text-align: center;
            margin-top: 10px;
        }
        #io {
            font-family: Impact;
            font-size: 22pt;
            line-height: 30pt;
            text-align: center;
        }
        #struct {
            color: #7F7F7F;
            font-size: 15px;
            font-weight: bold;
            margin-top: 0.3cm;
            text-align: center;
        }
    </style>

    ##Scripts
    <script type="text/javascript" src="$eng_js/jquery-1.3.2.min.js"></script>
    <script type="text/javascript" src="$eng_js/jquery-barcode.js"></script>
    <script type="text/javascript">
        \$(function(){
            \$('\#bc').barcode("$BC", "code128", {showHRI: false, barWidth:1, barHeight:30, output: 'bmp'});
        });
    </script>
</head>
<body>
    <div id='caption'>$CARD_CAPTION</div>
    <div id='description'>$CARD_DESCRIPT</div>
    <div id="printBC">
        <div id="dolj">Кассир</div>
        <div id="f">$F</div>
        <div id="io">$IO</div>
        <div id="group_bc">
          <div id="bc"></div>
        </div>
        <div id="struct">$STRUCT</div>
    </div>
</body>
</html>
